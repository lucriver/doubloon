@model CryptoPrices
@{
  ViewData["Title"] = "Crypto Prices";
}

<div class="container p-4">
  <div class="align-items-center d-flex" style="justify-content: space-between">
    <h1>Cryptocurrency</h1>
    <h3>Prices</h3>
  </div>
  <h3>Date: @System.DateTime.Now.ToShortDateString()</h3>

  <div class="d-flex" style="justify-content: center; flex-direction: row; order: 1; flex-wrap: wrap; flex: 1 0 100%">
    @foreach (var crypto in Model.values)
    {
      <div class="card border-primary m-2" style="width: 250px">
        <div class="card-header">
          <h1>@crypto.T</h1>
        </div>
        <div class="card-body">
          <div class="card-text d-flex justify-content-between">
            <h4>Open: </h4>
            <h4>$@crypto.o</h4>
          </div>
          <div class="card-text d-flex justify-content-between">
            <h4>High: </h4>
            <h4>$@crypto.h</h4>
          </div>
          <div class="card-text d-flex justify-content-between">
            <h4>Low: </h4>
            <h4>$@crypto.l</h4>
          </div>
          <div class="card-text d-flex justify-content-between">
            <h4>Close: </h4>
            <h4>$@crypto.c</h4>
          </div>
        </div>
      </div>
    }
  </div>

</div>
